<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecBackground">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_apm_user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:civ_border_color="@color/colorForeground"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/test_profile_image" />

            <TextView
                android:id="@+id/tv_apm_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/colorTertiary"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/civ_apm_user_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/civ_apm_user_image"
                app:layout_constraintTop_toTopOf="@id/civ_apm_user_image"
                tools:text="Nurarihyon" />

            <TextView
                android:id="@+id/tv_apm_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_regular"
                android:maxLines="1"
                android:textColor="@color/colorForeground"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/civ_apm_user_image"
                tools:text="Here goes the fucking meme" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_apm_meme_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/colorSecBackground"
                android:maxHeight="400dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_apm_title_text">


                <ImageView
                    android:id="@+id/iv_apm_meme_image"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:maxHeight="400dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/tv_apm_title_text"
                    tools:src="@drawable/random_gif" />

            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/btn_apm_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_favorite_filled"
                app:layout_constraintBottom_toBottomOf="@id/btn_apm_share"
                app:layout_constraintStart_toEndOf="@id/btn_apm_share"
                app:layout_constraintTop_toTopOf="@id/btn_apm_share"
                app:tint="@color/softRed" />

            <ImageView
                android:id="@+id/btn_apm_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_apm_meme_image"
                app:tint="@color/softGreen" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_apm_close"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorBackground"
        android:fontFamily="@font/opensans_regular"
        android:text="Close"
        android:textAllCaps="false"
        android:textColor="@color/colorTertiary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/colorTertiary" />


</androidx.constraintlayout.widget.ConstraintLayout>



